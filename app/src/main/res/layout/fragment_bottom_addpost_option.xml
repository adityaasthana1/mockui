<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="====="
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:id="@+id/add_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_nowhere"
        android:layout_marginStart="15dp"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_image_24"
            android:padding="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Image to the Post"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:textSize="14dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pin_post_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_nowhere"
        android:layout_marginStart="15dp"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_push_pin_24"
            android:padding="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pin this post"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:textSize="14dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_video_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_nowhere"
        android:layout_marginStart="15dp"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_video_library_24"
            android:padding="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Video"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:textSize="14dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_nowhere"
        android:layout_marginStart="15dp"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_location_on_24"
            android:padding="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Location"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:textSize="14dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_link_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_nowhere"
        android:layout_marginStart="15dp"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_add_link_24"
            android:padding="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Link"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:textSize="14dp"
            />

    </LinearLayout>

</LinearLayout>